@model Armitage.Models.Category
<div id="addcategory">
    <h3>Add new category</h3>
    @using (Ajax.BeginForm("_AddCategory", "PostMetaData",
                                                      new AjaxOptions
                                                      {
                                                          HttpMethod = "POST",
                                                          UpdateTargetId = "CategoryList",
                                                          LoadingElementId = "loadingtag2",
                                                          OnBegin = "hideform2",
                                                          OnComplete = "clearform2"

                                                      },
                                                      new { id = "asynccategoryform", @class = "form-inline" }
                                                                        ))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description)
        </div>
        <div class="form-group">
            <input id="AddCategory" type="submit" class="btn btn-success" />
        </div>
    }
</div>
