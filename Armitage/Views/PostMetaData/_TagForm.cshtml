@model Armitage.Models.Tag
<div id="addtag">
    <h3>Add new tag</h3>
    @using (Ajax.BeginForm("_AddTag", "PostMetaData",
                                                        new AjaxOptions
                                                        {
                                                            HttpMethod = "POST",
                                                            UpdateTargetId = "TagList",
                                                            LoadingElementId = "loadingtag",
                                                            OnBegin = "hideform",
                                                            OnComplete = "clearform"

                                                        },
                                                        new { id = "asynctagform", @class = "form-inline" }


                                                        ))//end beginform
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description)
        </div>
        <div class="form-group">
            <input id="AddTag" type="submit" class="btn btn-success" />
        </div>
    }
</div>
