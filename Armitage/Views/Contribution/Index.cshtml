@model Armitage.ViewModels.NewPostViewModel
@{
    ViewBag.Title = "Index";
}


<h2>New Post</h2>
<div class="col-md-12">
    @using (Ajax.BeginForm("pending", "Contribution", new AjaxOptions
                                                      {
                                                       HttpMethod="POST"
                                                      },
                            new { id = "posteditor", @class = "" }
                            ))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Post.Title)
            @Html.TextBoxFor(m => m.Post.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(m => m.Post.Body)
            @Html.DropDownListFor(m => m.Post.Category, new SelectList(Model.Categories, "CategoryId", "Name"), " SELECT CATEGORY ")
        </div>
        
            <input type="submit" class="btn btn-success" value="Save Post" />
            @Html.AntiForgeryToken()
    }
</div>
